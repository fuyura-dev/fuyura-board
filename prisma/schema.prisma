generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id      Int      @id @default(autoincrement())
  code    String   @unique
  name    String
  threads Thread[]
}

model Thread {
  id         Int      @id @default(autoincrement())
  title      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  posts      Post[]
  categoryId Int
  category   Category @relation(fields: [categoryId], references: [id])
}

model Post {
  id        Int      @id @default(autoincrement())
  threadId  Int
  content   String
  createdAt DateTime @default(now())
  thread    Thread   @relation(fields: [threadId], references: [id])
}

model Request {
  id          Int      @id @default(autoincrement())
  category    String
  board       String
  boardCode   String
  description String?
  votes       Int      @default(0)
  createdAt   DateTime @default(now())
}
